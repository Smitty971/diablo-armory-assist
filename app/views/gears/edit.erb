<h1>Edit Your Build</h1>
<br>
<h3><%= @error %></h3>
<br>
<form action="/gears/<%=@gear.id%>" method="post">
<input type="hidden" name="_method" value="patch">
<label>Build Name: </label>
 <input type="text" name="gear[title]" value="<%= @gear.title %>">
 <br><br>
 <label>Character Class: </label>
    <input type="radio" name="gear[character_klass]" value="Demon Hunter"><span>Demon Hunter<span>
    <input type="radio" name="gear[character_klass]" value="Crusader"> <span>Crusader<span>
    <input type="radio" name="gear[character_klass]" value="Barbarian"> <span>Barbarian<span>
    <input type="radio" name="gear[character_klass]" value="Necromancer"> <span>Necromancer<span>
    <input type="radio" name="gear[character_klass]" value="Witch Doctor"> <span>Witch Doctor<span>
    <input type="radio" name="gear[character_klass]" value="Wizard"> <span>Wizard<span>
    <input type="radio" name="gear[character_klass]" value="Monk"> <span>Monk<span>
  <br><br>
  <label>Helm: </label>
    <input type="text" name="gear[helm]" value="<%= @gear.helm %>">
  <br><br>
  <label>Shoulders: </label>
    <input type="text" name="gear[shoulders]" value="<%= @gear.shoulders %>">
  <br><br>
  <label>Gloves: </label>
    <input type="text" name="gear[gloves]" value="<%= @gear.gloves %>">
  <br><br>
  <label>Chest Armor: </label>
    <input type="text" name="gear[chest_armor]" value="<%= @gear.chest_armor %>">
  <br><br>
  <label>Belt: </label>
    <input type="text" name="gear[belt]" value="<%= @gear.belt %>">
  <br><br>
  <label>Pants: </label>
    <input type="text" name="gear[pants]" value="<%= @gear.pants %>">
  <br><br>
  <label>Boots: </label>
    <input type="text" name="gear[boots]" value="<%= @gear.boots %>">
  <br><br>
  <label>Bracers: </label>
    <input type="text" name="gear[bracers]" value="<%= @gear.bracers %>">
  <br><br>
  <label>Amulet: </label>
    <input type="text" name="gear[amulet]" value="<%= @gear.amulet %>">
  <br><br>
  <label>Ring 1: </label>
    <input type="text" name="gear[ring_1]" value="<%= @gear.ring_1 %>">
  <br><br>
  <label>Ring 2: </label>
    <input type="text" name="gear[ring_2]" value="<%= @gear.ring_2 %>">
  <br><br>
  <label>Weapon: </label>
    <input type="text" name="gear[weapon]" value="<%= @gear.weapon %>">
  <br><br>
  <label>Offhand: </label>
    <input type="text" name="gear[offhand]" value="<%= @gear.offhand %>">
  <br><br>
  <label>Gem Notes: </label>
    <textarea name="gear[gem_notes]<% @gear.gem_notes %>"><%= @gear.gem_notes %></textarea>
  <br><br>
  <label>Kanai's Cube: </label>
    <textarea name="gear[kanais_cube]<% @gear.kanais_cube %>"><%= @gear.kanais_cube %></textarea>
  <br><br>
  <label>Active Skills and Runes: </label>
