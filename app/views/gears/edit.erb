  <br><br>
  <label>Passive Skills: </label>
    <textarea name="gear[passive_skills]<% @gear.passive_skills %>"><%= @gear.passive_skills %></textarea>
  <br><br>
  <label>General Build Notes: </label>
    <textarea name="gear[general_build_notes]<% @gear.general_build_notes %>"><%= @gear.general_build_notes %></textarea>
  <br><br>
  <button type="submit">Edit Build</button>
</form>
